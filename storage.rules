// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra de Leitura: Qualquer usuário LOGADO pode ler as fotos.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Regra de Escrita (Upload): Permite escrita SOMENTE se o usuário estiver logado E
    // o caminho do arquivo começar com o UID dele (users/{seu_uid}/...)
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
